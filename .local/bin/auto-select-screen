#!/bin/sh
LAPTOP='eDP-1'
HDMI='HDMI-1'

if [ "$(xrandr --query | grep eDP-1-1 | wc -l)" == 1 ]
then
	LAPTOP='eDP-1-1'
	HDMI='HDMI-1-1'
fi

if [ "$(xrandr --query | awk '/^HDMI/ {print $2}')" == 'connected' ]
then
	# hdmi connected
	xrandr --output $HDMI --auto --scale 1.0x1.0  --output $LAPTOP --right-of $HDMI --auto --scale 1.0x1.0
else
	# hdmi disconnected
	xrandr --output $LAPTOP --output $HDMI --off
fi
setbg
