set smooth-scroll true
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map L zoom in
map K zoom out
map i recolor
map p print

# remap vim navigation keys to jkl;
map j scroll left
map k scroll down
map l scroll up
map ; scroll right

# copy to clipboard
set selection-clipboard clipboard
